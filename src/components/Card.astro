---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 dark:text-gray-300 mb-4">{body}</p>
  <a href={href} class="text-primary hover:underline">Learn more &rarr;</a>
</div>