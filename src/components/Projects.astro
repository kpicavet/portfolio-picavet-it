---
const projects = [
{
    title: 'Vanasoft',
    description: 'a warehouse management system for optimal logistics processes',
    image: '/vanasoft.jpg',
    link: 'https://www.vanasengineering.be/'
  },
  {
    title: 'Rydoo',
    description: 'An expense management platform that streamlines tracking and approving business expenses.',
    image: '/rydoo.png',
    link: 'https://rydoo.com'
  },
  {
    title: 'VAB',
    description: "VAB's website provides roadside assistance, insurance, travel services, and driving schools in Belgium.",
    image: '/vab.webp',
    link: 'https://vab.be'
  }
];
---

<section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-primary dark:text-secondary">Featured Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="bg-white dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col">
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6 flex justify-between flex-col flex-1">
            <div>
              <h3 class="text-xl font-semibold mb-2 text-primary dark:text-secondary">{project.title}</h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">{project.description}</p>
            </div>
            <a href={project.link}  target="_blank" class="text-secondary hover:text-primary dark:hover:text-white transition-colors">View</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>