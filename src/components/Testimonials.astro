---
const testimonials = [
  {
    name: "Jane Doe",
    company: "Tech Innovators Inc.",
    quote: "Kenny's expertise in Angular development significantly improved our project's performance and user experience.",
    avatar: "https://i.pravatar.cc/150?img=1"
  },
  {
    name: "John Smith",
    company: "Digital Solutions Ltd.",
    quote: "Working with Kenny was a pleasure. His full-stack skills and attention to detail are impressive.",
    avatar: "https://i.pravatar.cc/150?img=2"
  },
  {
    name: "Emily Brown",
    company: "WebApp Wizards",
    quote: "Kenny's ability to translate complex requirements into elegant code is remarkable. Highly recommended!",
    avatar: "https://i.pravatar.cc/150?img=3"
  }
];
---

<section id="testimonials" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-primary dark:text-secondary">What Clients Say</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-gray-100 dark:bg-gray-800 p-6 rounded-lg shadow-md">
          <p class="text-gray-600 dark:text-gray-300 mb-4 italic">"{testimonial.quote}"</p>
          <div class="flex items-center">
            <img src={testimonial.avatar} alt={testimonial.name} class="w-12 h-12 rounded-full mr-4" />
            <div>
              <p class="font-semibold text-primary dark:text-secondary">{testimonial.name}</p>
              <p class="text-sm text-gray-500 dark:text-gray-400">{testimonial.company}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>